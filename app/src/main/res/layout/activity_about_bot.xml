              android:layout_marginLeft="5dp" />
          <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#0b0b0b"
              android:textSize="17sp"
              android:textStyle="bold"
              android:layout_marginTop="10sp"
              android:text="2006- Co Founder Conference of Nigerian students in Defense for Democracy."
              android:layout_gravity="center_horizontal"
              android:layout_marginLeft="5dp" />
          <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#0b0b0b"
              android:textSize="17sp"
              android:textStyle="bold"
              android:layout_marginTop="10sp"
              android:text="2007 Director Youth and Students Mobilization DPP Presidential Campaign Organization."
              android:layout_gravity="center_horizontal"
              android:layout_marginLeft="5dp" />
          <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#0b0b0b"
              android:textSize="17sp"
              android:textStyle="bold"
              android:layout_marginTop="10sp"
              android:text="2008- Co founder/President General Arewa citizens action for change. "
              android:layout_gravity="center_horizontal"
              android:layout_marginLeft="5dp" />
          <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#0b0b0b"
              android:textSize="17sp"
              android:textStyle="bold"
              android:layout_marginTop="10sp"
              android:text="2011- Director Youth and Support Groups Aliyu Gusau Presidential Campaign Team."
              android:layout_gravity="center_horizontal"
              android:layout_marginLeft="5dp" />
          <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#0b0b0b"
              android:textSize="17sp"
              android:textStyle="bold"
              android:layout_marginTop="10sp"
              android:text="2008-2012 President African Youth Development Federation AYF Accra. "
              android:layout_gravity="center_horizontal"
              android:layout_marginLeft="5dp" />
          <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#0b0b0b"
              android:textSize="17sp"
              android:textStyle="bold"
              android:layout_marginTop="10sp"
              android:text="2013-Foundation member Northern Elders Forum. "
              android:layout_gravity="center_horizontal"
              android:layout_marginLeft="5dp" />
          <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="#0b0b0b"
              android:textSize="17sp"
              android:textStyle="bold"
              android:layout_marginTop="10sp"
              android:text="2013- Present Director Youths and Mobilization Northern Elders Forum. "
